@page
@model projektowanie_oprogramowania_final_project.Pages.Reservations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].ChosenPayment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Reservation) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChosenPayment)
            </td>
            <td>
                    <a asp-page="./Details" asp-route-id="@item.ReservationId">Details</a>  
                    <a asp-page="./Delete" asp-route-id="@item.ReservationId">Delete</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
