@page
@model projektowanie_oprogramowania_final_project.Pages.Reservations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reservation.ReservationId" />
            <div class="form-group">
                <label asp-for="Reservation.Price" class="control-label"></label>
                <input asp-for="Reservation.Price" class="form-control" />
                <span asp-validation-for="Reservation.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.ChosenPayment" class="control-label"></label>
                <select asp-for="Reservation.ChosenPayment" class="custom-select" asp-items="Html.GetEnumSelectList<projektowanie_oprogramowania_final_project.Models.PaymentMethod>()">
                    <option value="Please select"></option>
                </select>
                <span asp-validation-for="Reservation.ChosenPayment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.ShowingId" class="control-label"></label>
                <select asp-for="Reservation.ShowingId" class="form-control" asp-items="ViewBag.ShowingId"></select>
                <span asp-validation-for="Reservation.ShowingId" class="text-danger"></span>
            </div>
            
            <p>How to add seats?</p>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
