@page
@model projektowanie_oprogramowania_final_project.Pages.Reservations.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.ChosenPayment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.ChosenPayment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.Seats)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Reservation.Seats != null && Model.Reservation.Seats.Any())
            {
                @foreach (var seat in Model.Reservation.Seats)
                {
                    @Html.DisplayFor(model => seat.SeatNumber)
                }
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Reservation.ReservationId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
