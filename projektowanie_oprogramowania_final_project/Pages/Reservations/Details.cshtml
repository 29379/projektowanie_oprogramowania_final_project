@page
@model projektowanie_oprogramowania_final_project.Pages.Reservations.DetailsModel

@{
    ViewData["Title"] = "Details";
}

@if(!User.IsInRole("Admin") && !User.IsInRole("Employee"))
{
    <h1>Reservation confirmed!</h1>
}


<div>
    <h4>Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.Showing.Film)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.Showing.Film.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.Showing.Showtime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.Showing.Showtime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.Showing.Cinema)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.Showing.Cinema)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.Showing.Room)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.Showing.Room.RoomNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.ChosenPayment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.ChosenPayment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.ReservationSeats)
        </dt>
        <dd class="col-sm-10">
                @foreach (var seat in ViewBag.ReservationSeats)
                {
                    @seat.Seat
                    <div></div>
                }
        </dd>
    </dl>
</div>